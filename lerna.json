{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "npmClient": "pnpm",
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/*.md",
    "**/web-app/**",
    "**/static/**"
  ],
  "version": "0.0.1-alpha.1",
  "command": {
    "version": {
      "ignoreChanges": [
        "**/__fixtures__/**",
        "**/__tests__/**",
        "**/*.md",
        "**/static/**"
      ]
    },
    "publish": {
      "allowBranch": [
        "main",
        "prerelease/*"
      ],
      "ignoreChanges": [
        "ignored-file",
        ".DS_Store",
        "**/__tests__/**"
      ]
    }
  }
}
